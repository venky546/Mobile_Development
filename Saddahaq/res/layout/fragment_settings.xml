<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/frag_settings"
    android:orientation="vertical">
      <Button
        android:id="@+id/change_pswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="@string/change_pswd"
        android:padding="5dp"
        android:background="#ffffff"
           />
    <View
           android:layout_width="fill_parent"
           android:layout_height="1dp"
           android:background="#E7463E"/>
       <Button
        android:id="@+id/change_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="@string/change_profile"
        android:padding="5dp"
        android:background="#ffffff"
           />
        <View
           android:layout_width="fill_parent"
           android:layout_height="1dp"
           android:background="#E7463E"/>
       <Button
        android:id="@+id/change_email_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="@string/change_notifications"
        android:padding="5dp"
        android:background="#ffffff"/>
        <View
           android:layout_width="fill_parent"
           android:layout_height="1dp"
           android:background="#E7463E"/>
       <Button
        android:id="@+id/change_personalize_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="@string/change_preferences"
        android:padding="5dp"
        android:background="#ffffff"
           />
</LinearLayout>
