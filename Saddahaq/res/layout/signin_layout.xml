<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llcontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="30dp" >

        <EditText
            android:id="@+id/emial"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="@string/enter_emailid"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="#AAA49F"
            android:textColorHint="#AAA49F" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#AAA49F" />

        <EditText
            android:id="@+id/pswd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="@string/enter_pswd"
            android:inputType="textPassword"
            android:paddingBottom="3dp"
            android:paddingTop="25dp"
            android:textColor="#AAA49F"
            android:textColorHint="#AAA49F" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#AAA49F" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp" >

            <Button
                android:id="@+id/Login"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="@string/signin"
                android:textColor="#ffffff"
                android:textSize="20sp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llcontainer"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.5"
            android:text="@string/orsignin"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fblogin"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/f" />
        <Button
            android:id="@+id/gplogin"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/g" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:id="@+id/cancel"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:text="@string/cancel" />

</RelativeLayout>