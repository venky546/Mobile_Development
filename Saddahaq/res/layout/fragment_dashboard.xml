<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="?android:attr/buttonBarStyle"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/ly"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#ffffff"
        style="?android:attr/buttonBarButtonStyle"
        android:background="#E95045"
        android:id="@+id/lastyear"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/lm"
        android:textSize="12sp"
        android:layout_weight="1"
        android:textColor="#ffffff"
        style="?android:attr/buttonBarButtonStyle"
        android:background="#E95045"
        android:id="@+id/lastmonth"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/lw"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#ffffff"
        style="?android:attr/buttonBarButtonStyle"
        android:background="#E95045"
        android:id="@+id/lastweek"
    />
</LinearLayout>
<ImageView
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:src="@drawable/blank"
    android:contentDescription="@string/accept"/>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="?android:attr/buttonBarStyle"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/views"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#000000"
        style="?android:attr/buttonBarButtonStyle"
        android:background="#EAEAEA"
        android:id="@+id/views"
    />
    <!-- <View
        android:background="#000000"
        android:layout_width="1dp"
        android:layout_height="20dp"/> -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/comments"
        android:textSize="12sp"
        android:layout_weight="1"
        android:textColor="#000000"
        style="?android:attr/buttonBarButtonStyle"
        android:background="#EAEAEA"
        android:id="@+id/comments"
    />
    <!-- <View
        android:background="#000000"
        android:layout_width="1dp"
        android:layout_height="20dp"
        /> -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/voteups"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#000000"
        style="?android:attr/buttonBarButtonStyle"
        android:background="#EAEAEA"
        android:id="@+id/voteups"
    />
</LinearLayout>

<ListView
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/lv_dashboard"
    android:divider="#000000"
    android:dividerHeight="0.5dp"/>
</LinearLayout>
